<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.app.RegisterController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10">

    <Label text="Create Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="newUsernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Create Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="newPasswordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Register" onAction="#handleRegister" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="Back to Login" onAction="#handleBack" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>
